block basetag
  -var base = '.'

mixin pagehref(sub)
  a(href=(dev ? 'http://localhost:8080/' : 'http://simonsager.se/') + sub class!=attributes.class)
    if block
        block

mixin pagelink(sub, inner)
  +pagehref(sub)(class="link")
    strong #{inner}

doctype
html(class=".no-js")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title
    meta(name='description', content='Portfolio website for Simon Johansson')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    base(href='#{base}')
    if dev
        link(rel='stylesheet', href='static/css/normalize.css')
        link(rel='stylesheet', href='static/css/modernscale.css')
        link(rel='stylesheet', href='static/css/style.css')
    else 
        link(rel='stylesheet', href='static/css/style.min.css')
    script.
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-69417124-1', 'auto');
        ga('send', 'pageview');
  body
    include partials/header.jade
    block content
    include partials/footer.jade

    
